<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <Button
        android:id="@+id/btn_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="upload file"
         />

    <Button
        android:id="@+id/btn_upload2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/btn_upload"
        android:textSize="30dp"
        android:text="upload xutils "
        />

    <Button
        android:id="@+id/btn_upload3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/btn_upload2"
        android:textSize="30dp"
        android:text="upload HttpClient "
        />

    <ProgressBar
        android:id="@+id/pb_progress"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_upload"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:max="100"
        android:progress="0"
           />

    <TextView
        android:id="@+id/tv_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_upload"
        android:textSize="30dp"
        android:layout_marginTop="20dp"
        android:text="test"/>

</RelativeLayout>
