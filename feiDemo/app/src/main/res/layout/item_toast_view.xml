<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/toast_bg_shape"
    android:padding="5dp"
    android:gravity="center">

    <ImageView
        android:id="@+id/iv_toast_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/drone_icon_connected"/>

    <TextView
        android:id="@+id/tv_toast_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/iv_toast_icon"
        android:layout_marginLeft="15dp"
        android:textSize="@dimen/text_size_3"
        android:textColor="@color/drone_connect_btn_click"
        android:text="V18S-00000000" />

</RelativeLayout>
